<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/HintergrundChallenger"
    tools:context="com.example.ellyn.challenger.MainActivity">

    <TextView
        android:layout_width="366dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/signUp_text"
        android:textSize="9dp"
        android:textColor="7f7f7f"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="362dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/pw_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="290dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/email_text"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="145dp"
        android:layout_height="148dp"
        app:srcCompat="@drawable/ChallengerLogo"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="120dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:background="none"
        android:text="@string/signUp_activity"
        android:textAllCaps="false"
        android:textColor="ff8200"
        android:textSize="9dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:text="@string/signUp_text_2"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget"
        android:textColor="7f7f7f"
        android:textSize="9dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        tools:layout_editor_absoluteY="386dp" />

</android.support.constraint.ConstraintLayout>
